<% layout("/layouts/boilerplate") %>
<body>
    <br><br>
    
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create a New Listings</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="add a catchy title" class="form-control" required/>
                    <div class="valid-feedback">title looks good</div>
                    <div class="invalid-feedback">Title must be added</div> 
                </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea> 
             <div class="invalid-feedback">description needed!</div> 
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="listing[image][url]" placeholder="enter image url link" class="form-control"/>
        </div> -->
         <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image][url]" class="form-control" required/>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
             <input type="number" name="listing[price]" placeholder="enter the price " class="form-control" required/>
             <div class="invalid-feedback">please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="India" class="form-control" required/>
             <div class="invalid-feedback">country name should be valid</div>
            </div>
        </div>
        
         <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Jaipur,Rajasthan" class="form-control" required/>
             <div class="invalid-feedback">please enter a valid location</div>
         </div>
        
        <br><br>
        <button class="btn btn-dark add-btn"> Create Listing </button> 
    </form>
   
    </div>
</div>
    
</body>
