<% layout("/layouts/boilerplate") %>

 <div class="row mt-3">
    <h1 class="col-6 offset-3">login on wonderLust</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" novalidate class="needs-validation">
                 <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required/>
                    <div class="invalid-feedback">username required</div> 
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required/>
                    <div class="valid-feedback">password entered</div>
                    <div class="invalid-feedback">password is required</div> 
                </div>
                <button class="btn btn-success">login</button>
            </form>
            </div>
            </div>